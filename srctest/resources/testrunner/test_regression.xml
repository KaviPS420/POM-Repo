<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="4"
	parallel="tests" verbose="4">

<listeners>
		<listener
			class-name="com.qa.opencart.Listener.ExtentReportListener" />
			<listener
			class-name="com.qa.opencart.Listener.TestAllureListener" />
	</listeners>
	
	
	 <test name="Open Cart App Test">
		<parameter name="browser" value="chrome" />
		<parameter name="url"
			value="https://naveenautomationlabs.com/opencart/index.php?route=account/register" />

		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test>


	 <test name="Login Page Test _ chrome">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>



	 <test name="Accounts Page Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>


